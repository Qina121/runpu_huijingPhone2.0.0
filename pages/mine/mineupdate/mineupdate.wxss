.page {
    width: 100%;
    height: 100%;
    position: relative;
    margin: 0;
    padding: 0;
    background-color: #FAFAFA;
}
.bgImage {
    width:750rpx;
    height:280rpx;
}
.pagefooter {
    width: 100%;
}
.widths {
    margin-top:20rpx
}
.paddings {
    margin-bottom: 20rpx;
}
.xiangxi {
    width: 100%;
    text-indent: 1rem;
    font-size: 28rpx;
    height: 80rpx;
    position: relative;
}
.mines {
    display: block;
    width: 100%;
    font-size:28rpx;
    font-weight:400;
    color:#333;
    line-height:80rpx;
    background-color: #fff;
    height: 80rpx;
}
.iconright {
    position: absolute;
    line-height: 80rpx;
    right:20rpx;
    float: right;
    top:0rpx;
    color:#E5E5E5;
    z-index: 60;
    font-size: 40rpx;
}

.paddinga {
    border-bottom: 1rpx solid #EFEFF4 ;
    margin-bottom: 1rpx ;
}
.historyNotice {
    display: block;
    width:750rpx;
    height:30rpx;
    font-size:32rpx;
    font-weight:bold;
    color:rgba(166,0,1,1);
    line-height:40rpx;
    border-left: 6rpx solid #A70304;
    box-sizing: border-box;
    margin: 40rpx 40rpx;
    line-height: 30rpx;
    padding-left: 20rpx;
    background-color: #fafafa;
}
.bigimg {
    height: 120rpx;
    line-height: 120rpx;
}
.userimgbox {
    width: 80rpx;
    height: 80rpx;
    position: absolute;
    right: 60rpx;
    top:0rpx;
    padding-top: 20rpx;
}
.bigbox {
    height: 120rpx;
}
.bigtext {
    height: 120rpx;
    line-height: 120rpx;
}
.iconstyle {
    padding-top: 20rpx
}
.flright {
    text-align: right;
    position: absolute;
    top:0rpx;
    right:60rpx;
    line-height: 80rpx;
    color:#888888;
    height: 80rpx;
    width: 80%;
    
}

.showsubmit {
    width: 40% !important;
    border-radius: 30rpx;
    background-color: #A60001;
    font-size: 26rpx;
    float: left;
    color:#fff;
    text-align: center;
    font-weight: 700;
    margin-left :6% !important;
    margin-top:100rpx;
    /* box-shadow:0rpx 10rpx 7rpx 3rpx rgba(166,0,1,0.3) */
}
.huise {
    background-color: #666 !important;
