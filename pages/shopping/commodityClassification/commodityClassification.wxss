  display: block;
  height: 100%;
  width: 100%;
}
.page {
  width: 100%;
  height: calc(100vh);
}
.swiper {
  width: 100%;
  height: 220rpx;
  /* border-radius: 12rpx; */
  overflow: hidden;
  transform: translateZ(0);
}
image{
  width: 100%;
  height: 100%;
}
/* 商品列表 */
.container{
  padding-bottom: env(safe-area-inset-bottom);
  padding: 0;
}
.product-list {
  display: flex;
  display: -webkit-flex;
  justify-content: space-between;
  flex-direction: row;
  flex-wrap: wrap;
  box-sizing: border-box;
  padding: 30rpx 30rpx 0 30rpx;
  background: #fff;
  width: 100%;
}

.pro-item {
  background: #fff;
  box-sizing: border-box;
  width: 49%;
  position: relative;
  margin-bottom: 2%;
  padding: 14rpx;
}

.pro-item::after {
  content: '';
  position: absolute;
  height: 200%;
  width: 200%;
  /* border: 1rpx solid #eaeef1; */
  border: 1rpx solid #ccc;
  transform-origin: 0 0;
  -webkit-transform-origin: 0 0;
  -webkit-transform: scale(0.5);
  transform: scale(0.5);
  left: 0;
  top: 0;
}

.pro-img {
  width: 100%;
  display: block;
  height: 230rpx;
}

.pro-content {
  display: flex;
  flex-direction: column;
  /* justify-content: space-between; */
  box-sizing: border-box;
  padding: 30rpx 20rpx;
  height: 140rpx;
}

.pro-tit {
  /* font-size:  */
  color: #2e2e2e;
  font-size: 26rpx;
  word-break: break-all;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.pro-price {
  /* padding-top: 18rpx; */
}

.goodsName{
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.goodsDescribe{
  color: #666;
  font-size: 24rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.sale-price {
  font-size: 30rpx;
  font-weight: 500;
  color: #ea1500;
  white-space: nowrap;
  text-overflow: ellipsis;
  margin-left: 23rpx;
}

.factory-price {
  font-size: 24rpx;
  color: #a0a0a0;
  /* text-decoration: line-through; */
  padding-left: 12rpx;
}

.pro-pay {
  padding-top: 10rpx;
  font-size: 24rpx;
  color: #656565;
}
